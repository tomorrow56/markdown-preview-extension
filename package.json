{
  "name": "markdown-preview-enhanced",
  "displayName": "Markdown Preview Enhanced",
  "description": "A VSCode extension that shows Markdown preview with Chrome's rendering engine",
  "version": "0.1.0",
  "publisher": "your-publisher",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:markdown"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "markdown-preview-enhanced.showPreview",
        "title": "Markdown: プレビューを横に表示"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "markdown-preview-enhanced.showPreview",
          "when": "editorLangId == markdown",
          "group": "navigation"
        }
      ],
      "editor/context": [
        {
          "command": "markdown-preview-enhanced.showPreview",
          "when": "editorLangId == markdown",
          "group": "navigation"
        }
      ],
      "explorer/context": [
        {
          "command": "markdown-preview-enhanced.showPreview",
          "when": "resourceLangId == markdown",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.59.0",
    "eslint": "^8.38.0",
    "typescript": "^5.0.4",
    "vsce": "^2.15.0"
  },
  "dependencies": {
    "marked": "^9.1.0",
    "puppeteer": "^21.5.0"
  }
}
